{
  "name": "wave-flex-integrator",
  "version": "1.0.5",
  "description": "A seamless bridge between your FlexRadio and Wavelog logging software, integrating DX Cluster data, and synchronizing frequency and mode, all without traditional CAT software.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "dxcluster",
    "ham-radio",
    "flexradio",
    "smartSDR",
    "wavelog",
    "panadapter",
    "integration",
    "radio-automation"
  ],
  "author": "tnxqso <tnxqso@narva2.net>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tnxqso/wave-flex-integrator.git"
  },
  "bugs": {
    "url": "https://github.com/tnxqso/wave-flex-integrator/issues"
  },
  "homepage": "https://github.com/tnxqso/wave-flex-integrator/blob/main/README.md",
  "dependencies": {
    "dotenv": "^16.4.5",
    "electron-json-storage": "^4.6.0",
    "electron-store": "^10.0.0",
    "electron-updater": "^6.3.9",
    "fast-xml-parser": "^5.3.3",
    "lodash": "^4.17.21",
    "lodash.mergewith": "^4.6.2",
    "mqtt": "^5.14.1",
    "node-fetch": "^2.7.0",
    "winston": "^3.14.2",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "electron": "^32.1.2",
    "electron-builder": "^26.4.0",
    "nodemon": "^3.0.1"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "overrides": {
    "lodash": "^4.17.21"
  },
  "build": {
    "appId": "com.waveflex.integrator",
    "productName": "WaveFlexIntegrator",
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "files": [
      "*.js",
      "*.html",
      "*.css",
      "!localConfig.js",
      "build/**/*",
      "main.js",
      "package.json",
      "src/**/*",
      "assets/**/*",
      "!localConfig.js",
      "!**/*.log",
      "!PRIVATE_README.md"
    ],
    "publish": {
      "provider": "github",
      "owner": "tnxqso",
      "repo": "wave-flex-integrator"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icons/icon.ico",
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "assets/icons/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "rpm",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Utility",
      "icon": "assets/icons/icon.png",
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    }
  }
}
{
  "name": "wave-flex-integrator",
  "version": "0.5.6",
  "description": "A seamless bridge between your FlexRadio and Wavelog logging software, integrating DX Cluster data, and synchronizing frequency and mode, all without traditional CAT software.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "keywords": [
    "dxcluster",
    "ham-radio",
    "flexradio",
    "smartSDR",
    "wavelog",
    "panadapter",
    "integration",
    "radio-automation"
  ],
  "author": "B Synnerlig ankeborg@duck.com",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tnxqso/wave-flex-integrator.git"
  },
  "bugs": {
    "url": "https://github.com/tnxqso/wave-flex-integrator/issues"
  },
  "homepage": "https://github.com/tnxqso/wave-flex-integrator/blob/main/README.md",
  "dependencies": {
    "dotenv": "^16.4.5",
    "electron-json-storage": "^4.6.0",
    "electron-store": "^10.0.0",
    "electron-updater": "^6.3.9",
    "lodash": "^4.17.21",
    "lodash.mergewith": "^4.6.2",
    "node-fetch": "^2.7.0",
    "winston": "^3.14.2",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "electron": "^32.1.2",
    "electron-builder": "^24.13.3",
    "nodemon": "^3.0.1"
  },
  "engines": {
    "node": ">=14.0.0"
  },

  "build": {
    "appId": "com.waveflex.integrator",
    "productName": "WaveFlexIntegrator",
    "directories": {
      "output": "dist"
    },
    "files": [
      "*.js",
      "*.html",
      "*.css",
      "!localConfig.js",
      "build/**/*",
      "main.js",
      "package.json",
      "src/**/*",
      "assets/**/*",
      "!localConfig.js",
      "!**/*.log",
      "!PRIVATE_README.md"
    ],
    "publish": "never",
    "win": {
      "target": "nsis",
      "icon": "build/icons/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icons/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "build/icons/icon.png"
    }
  }

}
